{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@virtuoso.dev/tooling/tsconfig.base.json",
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "erasableSyntaxOnly": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* taken from https://github.com/total-typescript/tsconfig/blob/main/bundler/dom.json */
    "isolatedModules": true
  },
  "include": ["src", "vite.config.ts", "eslint.config.mjs", "prettier.config.mjs", "vitest.config.ts"]
}
