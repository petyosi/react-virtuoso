{
  "name": "@virtuoso.dev/monorepo",
  "private": true,
  "scripts": {
    "ci": "pnpm ci-setup && pnpm build && pnpm typecheck && pnpm lint && pnpm lint:md && pnpm test && pnpm e2e",
    "ci-setup": "pnpm run --if-present --parallel ci-setup",
    "typecheck": "pnpm run --if-present --parallel typecheck",
    "lint": "pnpm run --if-present --parallel lint",
    "lint:md": "markdownlint '**/*.md' --ignore-path .markdownlintignore",
    "lint:md:fix": "markdownlint '**/*.md' --ignore-path .markdownlintignore --fix",
    "test": "pnpm run --if-present --parallel test",
    "e2e": "pnpm run  --if-present --parallel e2e",
    "build": "pnpm --if-present --recursive run build",
    "release": "pnpm build && pnpm publish -r",
    "changeset-add": "pnpm changeset add",
    "dev:docs": "pnpm --filter @virtuoso.dev/virtuoso.dev run dev",
    "build-virtuoso.dev": "pnpm --filter @virtuoso.dev/virtuoso.dev run build",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "lefthook": "^2.0.8",
    "markdownlint-cli": "^0.46.0"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react-inspector>react": "19"
      }
    }
  },
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "version": ">=10.24",
      "onFail": "error"
    },
    "runtime": {
      "name": "node",
      "version": ">=22.0.0",
      "onFail": "error"
    }
  }
}
