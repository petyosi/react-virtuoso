{
  "name": "@virtuoso.dev/monorepo",
  "private": true,
  "scripts": {
    "ci": "npm run ci-setup && npm run build && npm run typecheck && npm run lint && npm run test && npm run e2e",
    "ci-setup": "npm run ci-setup --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "e2e": "npm run e2e --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build-virtuoso.dev": "npm run build --workspace @virtuoso.dev/virtuoso.dev",
    "release": "npm run build --workspaces --if-present && npx @changesets/cli publish",
    "changeset-add": "npx @changesets/cli add",
    "dev:docs": "npm run dev --workspace  @virtuoso.dev/virtuoso.dev#dev"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.23.0",
    "@eslint/markdown": "^7.2.0",
    "@ladle/react": "^5.0.3",
    "@microsoft/api-extractor": "^7.52.13",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@virtuoso.dev/tooling": "*",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "knip": "^5.63.1",
    "node-html-parser": "^6.1.13",
    "playwright": "^1.55.0",
    "prettier": "^3.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resize-observer-polyfill": "^1.5.1",
    "semantic-release": "^24.2.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "packageManager": "^npm@10.9.0",
  "devEngines": {
    "packageManager": {
      "name": "npm",
      "version": ">=10.9",
      "onFail": "error"
    },
    "runtime": {
      "name": "node",
      "version": "^22.19.0",
      "onFail": "error"
    }
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
